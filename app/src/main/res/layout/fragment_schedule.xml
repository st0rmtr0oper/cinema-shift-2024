<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/schedule_prog_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/schedule_error_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error_text"
        android:textAlignment="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/schedule_date_rv_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/date_picker_rv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/date_pick" />

    <TextView
        android:id="@+id/red_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/schedule_red_rv_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/red_rv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/ceanse_time"/>

    <TextView
        android:id="@+id/green_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/schedule_green_rv_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/green_rv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/ceanse_time"/>

    <TextView
        android:id="@+id/blue_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/schedule_blue_rv_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/blue_rv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/ceanse_time"/>

</LinearLayout>